{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('post', {'id': post.id}) }}">
                    {{ post.title }}
                </a>    
            </li>
        {% endfor %}
    </ul>
{% endblock %}